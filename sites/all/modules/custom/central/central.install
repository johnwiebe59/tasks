/**
 * Disable Bartik Theme and enable Business Theme
 */
function central_update_7007(&$sandbox) {
  $enable = array(
    'on-boarding'
  );
  $disable = array(
    'bartik'
  );
  theme_enable($enable);
  variable_set('theme_default', 'on-boarding');
  theme_disable($disable);
}

